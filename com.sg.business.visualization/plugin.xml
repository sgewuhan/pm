<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.sg.business.visualization.category"
            name="可视化">
      </category>
      <view
            category="com.sg.business.visualization.category"
            class="com.sg.ui.part.view.TreeNavigator"
            id="com.sg.business.visualization.navigator"
            name="项目导航"
            restorable="true">
      </view>
      <view
            class="com.sg.widgets.part.view.TreeNavigator"
            id="visualization.demoview"
            name="表单演示"
            restorable="true">
      </view>
   </extension>
   <extension
         point="com.sg.widgets.navigator">
      <navigator
            id="visualization.demoview"
            provideSelection="true"
            tree="visualization.demotree">
      </navigator>
   </extension>
   <extension
         point="com.sg.widgets.table">
      <table
            canCreate="true"
            canDelete="true"
            canEdit="true"
            collectionName="demo"
            dataSet="com.sg.business.model.dataset.demo.DemoDataSet"
            dbName="pm2"
            editorId="visualization.demoeditor"
            id="visualization.demotable"
            popupMenu="popup:com.sg.widget.navigator"
            queryMode="false">
         <column
               column="desc"
               name="描述"
               type="String">
         </column>
         <column
               column="necessary"
               name="是否必须"
               type="Boolean">
         </column>
      </table>
   </extension>
   <extension
         point="com.sg.widgets.tree">
      <tree
            dataSet="com.sg.business.model.dataset.demo.DemoDataRoot"
            id="visualization.demotree">
         <column
               column="desc"
               name="描述"
               type="String">
         </column>
         <column
               column="necessary"
               name="是否必须"
               type="Boolean">
         </column>
         <structure
               modelRelation="demo_demo">
         </structure>
      </tree>
   </extension>
   <extension
         point="com.sg.widgets.dataEditor">
      <editor
            collectionName="demo"
            dbName="pm2"
            id="visualization.demoeditor"
            name="编辑演示"
            titleToolTips="表单演示">
         <basicpage
               id="visualization.editor.basicpage"
               title="基本信息">
            <pagecolumn>
               <section
                     label="演示数据">
                  <text
                        editPart="Text(Single Line)"
                        editable="true"
                        id="desc"
                        label="描述"
                        labelVisible="true"
                        name="desc"
                        persistable="true"
                        required="false"
                        type="String">
                  </text>
                  <checkbox
                        editable="true"
                        id="necessary"
                        label="是否必须"
                        labelVisible="true"
                        name="necessary"
                        persistable="true"
                        required="false">
                  </checkbox>
               </section>
            </pagecolumn>
         </basicpage>
      </editor>
     
   </extension>

</plugin>
