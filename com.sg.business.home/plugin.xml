<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="home"
            class="com.sg.business.home.view.BulletinBoardView"
            icon="image/bulletin_24.png"
            id="home.bulletinboard"
            name="公告板"
            restorable="true">
      </view>
      <view
            category="home"
            class="com.sg.business.home.view.LastOpened"
            id="home.lastopen"
            name="最近编辑"
            restorable="true">
      </view>
      <category
            id="home"
            name="主页">
      </category>
      <view
            class="com.sg.business.home.view.MyCalendar"
            id="home.mycalender"
            name="日历"
            restorable="true">
      </view>
      <view
            class="com.sg.business.home.ViewPart1"
            id="chartdemo"
            name="ChartDemo"
            restorable="true">
      </view>
   </extension>
   <extension
         point="com.sg.widgets.navigator">
      <navigator
            id="home.bulletinboard"
            tree="home.bulletinboard">
         <searchAction>
            <column
                  column="desc"
                  name="标题"
                  type="String">
            </column>
            <column
                  column="publisher"
                  name="发布人"
                  type="String">
            </column>
            <column
                  column="publish_date"
                  name="发布日期"
                  type="Date">
            </column>
         </searchAction>
         <filterAction>
            <column
                  column="desc"
                  name="标题"
                  type="String">
            </column>
            <column
                  column="publisher"
                  name="发布人"
                  type="String">
            </column>
            <column
                  column="publish_date"
                  name="发布日期"
                  type="Date">
            </column>
         </filterAction>
      </navigator>
   </extension>
   <extension
         point="com.sg.widgets.tree">
      <tree
            autoExpandLevel="-1"
            canCreate="true"
            customItemHeight="40"
            dataSet="com.sg.business.model.dataset.bulletinboard.BulletinBoardDataSet"
            editorId="bulletinboard.editor.create"
            headerVisiable="false"
            id="home.bulletinboard"
            limit="100"
            markupEnabled="true"
            multiSelection="true"
            popupMenu="popup:menu.bulletinboard">
         <structure
               modelRelation="bulletinboard_bulletinboard">
         </structure>
         <column
               column="desc"
               labelProvider="com.sg.widgets.commons.labelprovider.HTMLLabelprovider"
               lazyDisplay="true"
               name="标题"
               style="SWT.LEFT"
               type="String"
               width="-1"></column>
      </tree>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:menu.bulletinboard">
         <command
               commandId="bulletinboard.create"
               icon="image/bulletin_add_24.png"
               label="新建公告"
               style="push">
         </command>
         <command
               commandId="bulletinboard.reply"
               icon="image/bulleting_reply_24.png"
               label="回复公告"
               style="push">
         </command>
         <command
               commandId="bulletinboard.open"
               icon="image/24_blank.png"
               label="查看公告"
               style="push">
         </command>
         <separator
               name="bulletinboard.separator1"
               visible="true">
         </separator>
         <command
               commandId="com.sg.widgets.command.edit"
               icon="image/bulletin_edit_24.png"
               label="编辑"
               style="push">
         </command>
         <command
               commandId="com.sg.widgets.command.refresh"
               icon="image/refresh_24.png"
               label="更新"
               style="push">
         </command>
         <command
               commandId="com.sg.widgets.command.delete"
               icon="image/bulletin_remove_24.png"
               label="删除"
               style="push">
         </command>
      </menuContribution>
   </extension>

</plugin>
