<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.sg.widgets.perspective.EditorHidePerspective"
            id="com.sg.business.developer.perspective"
            name="开发者演示">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.sg.business.developer.perspective">
         <view
               closeable="false"
               id="developer.table"
               minimized="false"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               closeable="false"
               id="developer.tree"
               minimized="false"
               relationship="left"
               relative="developer.table">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="com.mobnut.db.documentModelAdapter">
      <doc
            class="com.sg.business.developer.model.Demo1"
            collection="demo1"
            db="pm2"
            id="demo1">
      </doc>
      <doc
            class="com.sg.business.developer.model.Demo2"
            collection="demo2"
            db="pm2"
            id="Demo2">
      </doc>
   </extension>
   <extension
         point="com.sg.widgets.navigator">
      <navigator
            id="developer.tree"
            provideSelection="true"
            tree="developer.tree">
         <createEditor
               createHandler="com.sg.business.developer.handler.Demo1CreateHandler"
               editorId="editor.developer.tree">
         </createEditor>
         <createEditor
               createHandler="com.sg.business.developer.handler.Demo2CreateHandler"
               editorId="editor.developer.table"></createEditor>
         <createEditor
               createHandler="com.sg.business.developer.handler.Demo1CreateRootHandler"
               editorId="editor.developer.toptree">
         </createEditor>
      </navigator>
      <navigator
            id="developer.table"
            table="developer.table">
         <masterProvider
               id="developer.tree">
         </masterProvider>
         <createEditor
               createHandler="com.sg.business.developer.handler.Demo2TableCreateHandler"
               editorId="editor.developer.table">
         </createEditor>
      </navigator>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.sg.widgets.part.view.TreeNavigator"
            id="developer.tree"
            name="Tree"
            restorable="true">
      </view>
      <view
            class="com.sg.widgets.part.view.TableNavigator"
            id="developer.table"
            name="Table"
            restorable="true">
      </view>
   </extension>
   <extension
         point="com.sg.widgets.table">
      <table
            dataSet="com.sg.business.developer.dataset.Demo2DataSet"
            id="developer.table">
         <column
               column="desc"
               name="说明"
               style="SWT.LEFT"
               type="String"
               width="-1">
         </column>
         <column
               column="necessary"
               name="有效"
               style="SWT.CENTER"
               type="Boolean">
         </column>
      </table>
   </extension>
   <extension
         point="com.sg.widgets.tree">
      <tree
            dataSet="com.sg.business.developer.dataset.Demo1DataSet"
            editorId="editor.developer.toptree"
            id="developer.tree"
            popupMenu="popup:com.sg.widget.navigator">
         <structure
               modelRelation="demo1_demo1">
         </structure>
         <column
               column="desc"
               name="说明"
               style="SWT.LEFT"
               type="String"
               width="-1"></column>
         <column
               column="necessary"
               name="有效"
               style="SWT.CENTER"
               type="Boolean"></column>
      </tree>
   </extension>
   <extension
         point="com.mobnut.db.modelRelation">
      <relation
            end1Class="com.sg.business.developer.model.Demo1"
            end1Key="_id"
            end2Class="com.sg.business.developer.model.Demo1"
            end2Key="parent_id"
            id="demo1_demo1"
            name="树下节点">
      </relation>
   </extension>
   <extension
         point="com.sg.widgets.dataEditor">
      <editor
            collectionName="demo1"
            dbName="pm2"
            id="editor.developer.tree"
            name="Tree编辑器"
            titleToolTips="Tree编辑器">
         <basicpage
               id="com.sg.business.developer.basicpage3"
               title="基本信息">
            <pagecolumn
                  id="基本信息">
               <section
                     label="基本信息">
                  <text
                        editPart="Text(Single Line)"
                        editable="true"
                        id="desc"
                        label="说明"
                        labelVisible="true"
                        name="desc"
                        persistable="true"
                        required="false"
                        type="String">
                  </text>
                  <checkbox
                        editable="true"
                        id="necessary"
                        label="有效"
                        labelVisible="true"
                        name="necessary"
                        persistable="true"
                        required="false">
                  </checkbox>
               </section>
            </pagecolumn>
         </basicpage>
      </editor>
      <editor
            collectionName="demo2"
            dbName="pm2"
            id="editor.developer.table"
            name="Table编辑器"
            titleToolTips="Table编辑器">
         <basicpage
               id="com.sg.business.developer.basicpage4"
               title="基本信息">
            <pagecolumn
                  id="基本信息">
               <section
                     label="基本信息">
                  <text
                        editPart="Text(Single Line)"
                        editable="true"
                        id="desc"
                        label="说明"
                        labelVisible="true"
                        name="desc"
                        persistable="true"
                        required="false"
                        type="String">
                  </text>
                  <checkbox
                        editable="true"
                        id="necessary"
                        label="有效"
                        labelVisible="true"
                        name="necessary"
                        persistable="true"
                        required="false">
                  </checkbox>
               </section>
            </pagecolumn>
         </basicpage>
      </editor>
      <editor
            collectionName="demo1"
            dbName="pm2"
            id="editor.developer.toptree"
            isDefault="true"
            name="顶级Tree编辑器"
            titleToolTips="顶级Tree编辑器">
         <basicpage
               id="com.sg.business.developer.basicpage5"
               title="基本信息">
            <pagecolumn
                  id="基本信息">
               <section
                     label="基本信息">
                  <text
                        editPart="Text(Single Line)"
                        editable="true"
                        id="desc"
                        label="说明"
                        labelVisible="true"
                        name="desc"
                        persistable="true"
                        required="false"
                        type="String">
                  </text>
                  <checkbox
                        editable="true"
                        id="necessary"
                        label="有效"
                        labelVisible="true"
                        name="necessary"
                        persistable="true"
                        required="false">
                  </checkbox>
               </section>
            </pagecolumn>
         </basicpage>
      </editor>
   </extension>

</plugin>
