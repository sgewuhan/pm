   <extension
         point="com.sg.widgets.dataEditor">
      <editor
            collectionName="project"
            dbName="pm2"
            id="project.editor"
            image="image/project_24.png"
            isDefault="true"
            name="项目">
         <basicpage
               description="项目的基本信息"
               id="project.basicpage"
               image="image/project_24.png"
               title="基本">
            <pagecolumn>
               <section
                     label="项目摘要">
                  <fieldgroup
                        columnCount="2"
                        makeColumnWidthEqual="false">
                     <text
                           editPart="Text(Single Line)"
                           editable="true"
                           id="projectnumber"
                           label="项目编号"
                           labelVisible="true"
                           name="projectnumber"
                           persistable="true"
                           required="false"
                           type="String">
                     </text>
                     <combo
                           editPart="Combo(Read Only)"
                           editable="false"
                           id="status"
                           label="状态"
                           labelVisible="false"
                           name="status"
                           option="status"
                           persistable="true"
                           required="false"
                           type="String">
                     </combo>
                  </fieldgroup>
                  <text
                        editPart="Text(Single Line)"
                        editable="true"
                        id="desc"
                        label="项目名称"
                        labelVisible="true"
                        name="desc"
                        persistable="true"
                        required="false"
                        type="String">
                  </text>
                  <text
                        editPart="Text(Multi Line)"
                        editable="true"
                        id="description"
                        label="描述"
                        labelVisible="true"
                        name="description"
                        persistable="true"
                        required="false"
                        type="String">
                  </text>
               </section>
               <section
                     label="项目经理, 部门">
                  <text
                        editPart="Text(Single Line)"
                        editable="false"
                        id="chargerid"
                        label="项目经理"
                        labelVisible="true"
                        name="chargerid"
                        persistable="false"
                        presentation="com.sg.business.model.field.UserIdFieldPres"
                        required="false"
                        type="String">
                  </text>
                  <text
                        editPart="Text(Single Line)"
                        editable="false"
                        id="org_id"
                        label="项目管理部门"
                        labelVisible="true"
                        name="org_id"
                        persistable="true"
                        presentation="com.sg.business.model.field.OrgFieldPres"
                        required="false"
                        type="String">
                  </text>
                  <text
                        editPart="Text(Single Line)"
                        editable="false"
                        id="launchorg_id"
                        label="项目发起部门"
                        labelVisible="true"
                        name="launchorg_id"
                        persistable="true"
                        presentation="com.sg.business.model.field.OrgFieldPres"
                        required="false"
                        type="String">
                  </text>
               </section>
            </pagecolumn>
            <pagecolumn>
               <section
                     label="计划">
                  <dateTime
                        editPart="DateDialog"
                        editable="false"
                        id="planstart"
                        label="计划开始"
                        labelVisible="true"
                        name="planstart"
                        persistable="true"
                        required="false"
                        type="Date">
                  </dateTime>
                  <dateTime
                        editPart="DateDialog"
                        editable="false"
                        id="planfinish"
                        label="计划完成"
                        labelVisible="true"
                        name="planfinish"
                        persistable="true"
                        required="false"
                        type="Date">
                  </dateTime>
                  <spinner
                        editable="true"
                        id="planduration"
                        label="计划工期(天)"
                        labelVisible="true"
                        name="planduration"
                        persistable="true"
                        required="false">
                  </spinner>
                  <spinner
                        editable="true"
                        id="planworks"
                        label="计划工时(小时)"
                        labelVisible="true"
                        name="planworks"
                        persistable="true"
                        required="false">
                  </spinner>
               </section>
               <section
                     label="实际">
                  <dateTime
                        editPart="DateDialog"
                        editable="false"
                        id="actualstart"
                        label="实际开始"
                        labelVisible="true"
                        name="actualstart"
                        persistable="true"
                        required="false"
                        type="Date">
                  </dateTime>
                  <dateTime
                        editPart="DateDialog"
                        editable="false"
                        id="actualfinish"
                        label="实际完成"
                        labelVisible="true"
                        name="actualfinish"
                        persistable="true"
                        required="false"
                        type="Date">
                  </dateTime>
                  <spinner
                        editable="false"
                        id="actualduration"
                        label="实际工期(天)"
                        labelVisible="true"
                        name="actualduration"
                        persistable="true"
                        required="false">
                  </spinner>
                  <spinner
                        editable="false"
                        id="actualworks"
                        label="实际工时(小时)"
                        labelVisible="true"
                        name="actualworks"
                        persistable="true"
                        required="false">
                  </spinner>
               </section>
            </pagecolumn>
         </basicpage>
         <basicpage
               description="请确定项目的以下选项"
               id="project.basicpage.3"
               pageDelegator="com.sg.business.project.editor.ProjectOptionPage"
               title="项目选项">
         </basicpage>
      </editor>
      <editor
            collectionName="project"
            dbName="pm2"
            id="project.editor.wizard"
            image="image/project_72.png"
            isDefault="false"
            name="项目">
         <basicpage
               description="项目的基本信息"
               id="project.basicpage.1"
               title="基本">
            <pagecolumn>
               <section
                     label="项目摘要">
                  <text
                        editPart="Text(Single Line)"
                        editable="true"
                        id="projectnumber"
                        label="项目编号"
                        labelVisible="true"
                        name="projectnumber"
                        persistable="true"
                        required="false"
                        type="String">
                  </text>
                  <text
                        editPart="Text(Single Line)"
                        editable="true"
                        id="desc"
                        label="项目名称"
                        labelVisible="true"
                        name="desc"
                        persistable="true"
                        required="true"
                        type="String">
                  </text>
                  <text
                        editPart="Text(Multi Line)"
                        editable="true"
                        id="description"
                        label="描述"
                        labelVisible="true"
                        name="description"
                        persistable="true"
                        required="false"
                        type="String">
                  </text>
               </section>
               <section
                     label="项目经理、项目管理部门">
                  <text
                        editPart="Text(Single Line)"
                        editable="false"
                        id="chargerid"
                        label="项目经理"
                        labelVisible="true"
                        name="chargerid"
                        persistable="true"
                        presentation="com.sg.business.model.field.UserIdFieldPres"
                        required="false"
                        type="String">
                  </text>
                  <navigatorSelector
                        id="org_id"
                        label="项目管理部门"
                        labelVisible="true"
                        modelClass="com.sg.business.model.Organization"
                        name="org_id"
                        navigatorId="project.managementorg"
                        navigatorReturnField="_id"
                        persistable="true"
                        required="true">
                  </navigatorSelector>
                  <navigatorSelector
                        id="launchorg_id"
                        label="项目发起部门"
                        labelVisible="true"
                        modelClass="com.sg.business.model.Organization"
                        name="launchorg_id"
                        navigatorId="project.launchorg"
                        navigatorReturnField="_id"
                        persistable="true"
                        required="true">
                  </navigatorSelector>
               </section>
            </pagecolumn>
         </basicpage>
         <basicpage
               description="请填写项目计划，并选择项目模板"
               id="project.basicpage.2"
               title="项目计划和模板">
            <pagecolumn>
               <section
                     label="计划">
                  <dateTime
                        editPart="DateDialog"
                        editable="true"
                        id="planstart"
                        label="计划开始"
                        labelVisible="true"
                        name="planstart"
                        persistable="true"
                        required="true"
                        type="Date">
                  </dateTime>
                  <dateTime
                        editPart="DateDialog"
                        editable="true"
                        id="planfinish"
                        label="计划完成"
                        labelVisible="true"
                        name="planfinish"
                        persistable="true"
                        required="true"
                        type="Date">
                  </dateTime>
               </section>
               <section
                     label="项目模板">
                  <combo
                        dataSetFactory="com.sg.business.model.dataset.project.ProjectTemplateOfOrg"
                        editPart="Combo(Read Only)"
                        editable="true"
                        id="projecttemplate_id"
                        isComputeField="true"
                        label="项目模板"
                        labelVisible="true"
                        name="projecttemplate_id"
                        persistable="true"
                        required="true"
                        type="ObjectId">
                  </combo>
               </section>
            </pagecolumn>
         </basicpage>
         <basicpage
               description="请确定项目的以下选项"
               id="project.basicpage.3"
               pageDelegator="com.sg.business.project.editor.ProjectOptionPage"
               title="项目选项">
         </basicpage>
      </editor>
   </extension>
   <extension
         point="com.sg.widgets.navigator">
      <navigator
            id="project.managementorg"
            table="project.managementorg">
         <filterAction>
            <column
                  columnDefinitionId="com.sg.widgets.column.desc">
            </column>
         </filterAction>
         <searchAction>
            <column
                  columnDefinitionId="com.sg.widgets.column.desc">
            </column>
         </searchAction>
      </navigator>
      <navigator
