<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.sg.business.project.category.project"
            name="项目">
      </category>
      <view
            category="com.sg.business.project.category.project"
            class="com.sg.widgets.part.view.TableNavigator"
            id="project.navigator"
            name="项目导航"
            restorable="true">
      </view>
      <view
            category="com.sg.business.project.category.project"
            class="com.sg.widgets.part.view.TreeNavigator"
            id="com.sg.business.project.wbs"
            name="工作分解结构"
            restorable="true">
      </view>
   </extension>
   <extension
         point="com.sg.widgets.navigator">
      <navigator
            id="project.navigator"
            provideSelection="true"
            table="project.navigator">
         <filterAction>
            <column
                  column="projectNum"
                  name="项目编号"
                  style="SWT.LEFT"
                  type="String">
            </column>
            <column
                  column="activated"
                  name="激活"
                  style="SWT.LEFT"
                  type="Boolean">
            </column>
         </filterAction>
      </navigator>
      <navigator
            id="com.sg.business.project.wbs"
            provideSelection="true"
            table="com.sg.business.project.wbstree">
      </navigator>
   </extension>
   <extension
         point="com.sg.widgets.table">
      <table
            canCreate="true"
            canDelete="true"
            canEdit="true"
            collectionName="project"
            dataSet="com.sg.business.project.model.ProjectDataSetFactory"
            dbName="pm2"
            editorId="com.sg.business.project.editor1"
            id="project.navigator"
            limit="100"
            popupMenu="popup:com.sg.widgets.ctableviewer"
            searchCollection="true">
         <column
               column="projectNum"
               name="项目编号"
               style="SWT.LEFT"
               type="String">
         </column>
         <column
               column="activated"
               name="激活"
               style="SWT.LEFT"
               type="Boolean">
         </column>
      </table>
   </extension>
   <extension
         point="com.sg.widgets.tree">
      <tree
            id="com.sg.business.project.wbstree"
            popupMenu="popup:com.sg.widgets.ctableviewer">
         <column
               column="projectNum"
               name="项目编号"
               style="SWT.LEFT"
               type="String">
         </column>
      </tree>
   </extension>
   <extension
         point="com.sg.widgets.dataEditor">
      <editor
            collectionName="project"
            dbName="pm2"
            id="com.sg.business.project.editor1"
            name="项目">
         <basicpage
               id="com.sg.business.project.basicpage1"
               title="com.sg.business.project.basicpage1">
            <pagecolumn>
               <section
                     label="com.sg.business.project.section1">
                  <text
                        editPart="Text(Single Line)"
                        editable="true"
                        id="projectNum"
                        label="项目编号"
                        labelVisible="true"
                        name="projectNum"
                        persistable="true"
                        required="false"
                        type="String">
                  </text>
                  <checkbox
                        editable="true"
                        id="activated"
                        label="激活"
                        labelVisible="true"
                        name="activated"
                        persistable="true"
                        required="false">
                  </checkbox>
               </section>
            </pagecolumn>
         </basicpage>
      </editor>
   </extension>
   <extension
         point="com.mobnut.db.documentModelAdapter">
      <doc
            class="com.sg.business.model.Project"
            collection="project"
            db="pm2">
      </doc>
   </extension>

</plugin>
