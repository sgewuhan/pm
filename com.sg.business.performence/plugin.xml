<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="work"
            class="com.sg.business.work.resource.OrgResCalender"
            id="work.teamworklist"
            name="部门资源工时">
      </view>
      <view
            category="work"
            class="com.sg.business.work.resource.ProjectResCalender"
            id="work.projectworklist"
            name="项目资源工时">
      </view>
      <view
            category="work"
            class="com.sg.business.work.resource.OrgProjectResCalender"
            id="work.organizationprojectworklist"
            name="部门项目工时">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.sg.business.work.resource.DisplayYear"
            commandId="work.teamworklist.displayyear">
      </handler>
      <handler
            class="com.sg.business.work.resource.Display3Month"
            commandId="work.teamworklist.display3month">
      </handler>
      <handler
            class="com.sg.business.work.resource.DisplayLeft"
            commandId="work.teamworklist.displayleft">
      </handler>
      <handler
            class="com.sg.business.work.resource.DisplayRight"
            commandId="work.teamworklist.displayright">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="work"
            id="work.teamworklist.displayyear"
            name="显示全年">
      </command>
      <command
            categoryId="work"
            id="work.teamworklist.display3month"
            name="显示最近三个月">
      </command>
      <command
            categoryId="work"
            id="work.teamworklist.displayleft"
            name="显示更早">
      </command>
      <command
            categoryId="work"
            id="work.teamworklist.displayright"
            name="显示更晚">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:work.teamworklist?after=additions">
         <command
               commandId="work.teamworklist.displayyear"
               icon="image/cal1_24.png"
               label="显示全年"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="work.teamworklist.display3month"
               icon="image/cal2_24.png"
               label="显示最近3个月"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="work.teamworklist.displayleft"
               icon="image/left_24.png"
               label="显示更早"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="work.teamworklist.displayright"
               icon="image/right_24.png"
               label="显示更晚"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:work.projectworklist?after=additions">
         <command
               commandId="work.teamworklist.displayyear"
               icon="image/cal1_24.png"
               label="显示全年"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="work.teamworklist.display3month"
               icon="image/cal2_24.png"
               label="显示最近3个月"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="work.teamworklist.displayleft"
               icon="image/left_24.png"
               label="显示更早"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="work.teamworklist.displayright"
               icon="image/right_24.png"
               label="显示更晚"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
