            name="类型"
            type="String"
            width="80">
      </column>
      <column
            id="f_vid"
            name="版本号"
            type="String"
            width="50">
      </column>
      <column
            column="_caccount"
            id="generic._caccount"
            labelProvider="com.sg.widgets.commons.labelprovider.AccountLabelProvider"
            name="创建者"
            type="String"
            width="80">
      </column>
      <column
            column="_cdate"
            id="generic._cdate"
            name="创建时间"
            type="DateTime"
            width="80">
      </column>
      <column
            column="_maccount"
            id="generic._maccount"
            labelProvider="com.sg.widgets.commons.labelprovider.AccountLabelProvider"
            name="修订者"
            type="String"
            width="80">
      </column>
      <column
            column="_mdate"
            id="generic._mdate"
            name="修订时间"
            type="DateTime"
            width="80">
      </column>
   </extension>
   <extension
         id="projecttemplate"
         name="项目模板"
         point="com.sg.widgets.column">
      <column
            column="desc"
            id="projecttemplate.desc"
            name="项目模板名称"
            type="String"
            width="-1">
      </column>
      <column
            column="activated"
            id="generic.activated"
            labelProvider="com.sg.business.model.labelprovider.ActivatedLabelProvider"
            name="激活"
            style="SWT.CENTER"
            type="Boolean"
            width="24">
      </column>
      <column
            column="desc"
            id="work.desc"
            name="工作名称"
            type="String"
            width="-1">
      </column>
      <column
            column="seq"
            id="work.seq"
            labelProvider="com.sg.business.model.labelprovider.WBSCodeLabelprovider"
            name="序号"
            type="Integer"
            width="160">
      </column>
      <column
            column="desc"
            id="roledefinition.desc"
            name="角色名称"
            type="String"
            width="-1">
      </column>
      <column
            column="rolenumber"
            id="roledefinition.number"
            name="角色编号"
            type="String"
            width="80">
      </column>
      <column
            column="description"
            id="roledefinition.description"
            name="说明"
            type="String"
            width="120">
      </column>
   </extension>

</plugin>
